<!doctype html>
{% block head %}
<!--[if lt IE 7]><html class="no-js ie ie6 lt-ie9 lt-ie8 lt-ie7" {{site.language_attributes}}> <![endif]-->
<!--[if IE 7]><html class="no-js ie ie7 lt-ie9 lt-ie8" {{site.language_attributes}}> <![endif]-->
<!--[if IE 8]><html class="no-js ie ie8 lt-ie9" {{site.language_attributes}}> <![endif]-->
<!--[if gt IE 8]><!--><html class="no-js" {{site.language_attributes}}> <!--<![endif]-->
<head>
  <meta charset="{{site.charset}}" />
  <title>
	{% if wp_title %}
		{{ wp_title }} - {{ site.name }}
	{% else %}
		{{ site.name }}
	{% endif %}
  </title>
  <meta name="description" content="{{site.description}}">
	<link rel="stylesheet" href="{{site.theme.link}}/css/style.css" type="text/css" media="screen" />
  <link rel="stylesheet" href="{{site.theme.link}}/vendor/fortawesome/font-awesome/css/font-awesome.min.css">
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="pingback" href="{{site.pingback_url}}" />
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:400italic,400,700' rel='stylesheet' type='text/css'>
  <style>#page-site-banner { background-image: url({{function('get_banner_image')}}); }</style>
  {{function('wp_head')}}
  
  <!-- BEGIN Google Analytics -->
	<script type="text/javascript">
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

		ga('create', 'UA-22170471-12', 'auto');
		ga('set', 'forceSSL', true);
		ga('send', 'pageview');

	</script>
  <!-- END Google Analytics -->
{% endblock %}
</head>
{% if not fn('is_search') %}
<body class="{{body_class}} {{post.link|split('/')[3]}}" data-source="base.twig">
{% else %}
<body class="{{body_class}}" data-source="base.twig">
{% endif %}
<!-- HEADER -->
<header id="navbar" role="banner">
  <nav role="navigation" class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
      	<a class="logo navbar-btn pull-left" href="{{home_url}}" title="Home">
          <img src="{{theme_url}}/images/sil_logo_r_combo.jpg" alt="Home">
        	</a>

    <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#topNavbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>

      <div id="topNavbar" class="collapse navbar-collapse" data-collapse="collapsed">
    		<div id="search-box">
    		  {{function('get_search_form')}}
        </div>
    		<div id="nav-list">
          <ul class="nav navbar-nav navbar-right">
            {% for item in menu.get_items %}
              <li class="nav-main-item {{item.classes | join(' ')}}"><a class="nav-main-link" href="{{item.get_link}}">{{item.title}}</a></li>
            {% endfor %}
          </ul>
        </div>
    	</div>
    </div>
  </nav>
</header>

<header id="page-site-name">
  <div class="container">
    <h1 class="page-header">{{site.name}}</h1>
  </div>
</header>
{% block breadcrumbs %}
  {% include "breadcrumbs.twig" %}
{% endblock %}
{% block content %}
{% endblock %}

<aside id="license">
  <div class="container fullwidth">
    {{section_license}}
  </div>
</aside>

<aside id="donate">
  <div class="container fullwidth">
    {{section_donate}}
  </div>
</aside>

{% include 'footer.twig' %}
{{ function('wp_footer') }}

<footer class="footer-bottom">
	<div class="container">
		<div class="row">
			<nav class="col-xs-12 col-md-6">
				<p>Copyright Â© {{ "now"|date("Y") }}&nbsp;&nbsp;<a href="http://www.sil.org/" title="" class="active">SIL International {{qux}}</a></p>
			</nav>
			<nav class="col-xs-12 col-md-6">
				<ul class="nav nav-horizontal">
					<li class="first leaf active"><a href="/terms-of-use" title="" class="active">Terms of Use</a></li>
					<li class="last leaf active"><a href="/privacy-policy" title="" class="active">Privacy Policy</a></li>
				</ul>
			</nav>
		</div>
	</div>
</footer>
</body>
</html>
