{% extends "base.twig" %}

{% block breadcrumbs %}
<header id="page-breadcrumbs">
  <div class="container">
    <h2 class="page-header">
      <ol class="breadcrumb">
          <li><a href="{{home_url}}">Home</a></li>
          <li><a href=""><span class="last-crumb">News</span></a></li>
      </ol>
    </h2>
  </div>
</header>
{% endblock %}

{% block content %}

<section id="content_primary">

  <div class="container">
  	<div class="row">

  		<div class="col-md-8 col-sm-8">
    		<section class="article-content">
					<h1>News</h1>
					{% include "pagination.twig" %}
					{% for post in posts %}
						{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
					{% endfor %}
					{% include "pagination.twig" %}
        </section>
        {% filter shortcodes %}
					[top]
        {% endfilter %}
      </div>
      {% include "sidebar.twig" %}
    </div>
  </div>

</section>

{% endblock %}
