{% extends "base.twig" %}

{% block breadcrumbs %}
<header id="page-breadcrumbs">
  <div class="container">
    <h2 class="page-header">
      <ol class="breadcrumb">
          <li><a href="{{home_url}}">Home</a></li>
          <li><a href=""><span class="last-crumb">Search Results</span></a></li>
      </ol>
    </h2>
  </div>
</header>
{% endblock %}

{% block content %}

<section id="content_primary">

  <div class="container">
  	<div class="row">

  		<div class="col-md-8 col-sm-8">
    		<section class="article-content">
    			<h1>Search Results</h1>
					{% if posts|length > 0 %}
						{{results}} {% include "pagination.twig" %}
						{% for post in posts %}
							{% include ['tease-'~post.post_type~'.twig', 'tease.twig'] %}
						{% endfor %}
						{% include "pagination.twig" %}
					{% else %}
								{{results}}
								<h3>Suggestions:</h3>
								<ul>
									<li>Make sure all words are spelled correctly.</li>
									<li>Try different keywords.</li>
									<li>Try more general keywords.</li>
									<li>Try fewer keywords.</li>
									<li>If you searched for an exact phrase enclosed in quotation marks, try removing the quotation marks.</li>
								</ul>
					{% endif %}
        </section>
				{% filter shortcodes %}
					[top]
				{% endfilter %}
      </div>

      {% include "sidebar.twig" %}

    </div>
  </div>

</section>

{% endblock %}
